
concept TypeChecks
{
    /type_check_is = self is TypeChecks;
    /type_check_is_not = self isnt TypeChecks;

    ancestors: Ancestor*;

    /descendants = for a in ancestors | select: a is Descendant;
}

concept Ancestor;

concept Descendant: Ancestor;

task poj by poj
{
    groupId = "cml-expressions";
    artifactId = "cml-expressions-type-checks";
    artifactVersion = "1.0-SNAPSHOT";
    packageName = "type_checks.poj";
    packagePath = "type_checks/poj";
}

task pop by pop
{
    moduleName = "cml_expressions_type_checks_pop";
    moduleVersion = "1.0";
}
